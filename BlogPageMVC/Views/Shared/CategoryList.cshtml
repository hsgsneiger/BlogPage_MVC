@model List<BlogPageMVC.Models.tbCategory>
<div class="container" id="container-category">
    <div id="header-cl" class="row justify-content-center">
        Danh mục
    </div>
    <div class="row" id="list-categories">
        @foreach (var category in Model)
        {
            var aaaa = category.tbPost_Category.Count;
            <a class="col-12" href='@Url.Action("Category", "Home", new { _id = category.id })'>#@category.Name <span class="badge">@aaaa</span></a><br>
        }
    </div>
</div>

<style>
    #container-category {
        margin-top:50px;
        width: 100%;
        height: auto;
        border: 1px solid #808080;
        border-radius: 15px;
    }
    #header-cl {
        padding-bottom: 15px;
        color: rgb(255, 165, 66);
        font-size: 20px;
        font-weight: 800;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    }
    #list-categories {
        padding-bottom:15px;
    }

</style>

